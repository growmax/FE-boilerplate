{
  "name": "enterprise-react-boilerplate",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A production-ready React + Vite + TypeScript boilerplate",
  "keywords": [
    "react",
    "vite",
    "typescript",
    "boilerplate",
    "enterprise"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/react-boilerplate.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "dev:mock": "VITE_ENABLE_MOCKS=true vite",
    "dev:debug": "vite --mode development --debug",
    "build": "tsc -b && vite build",
    "build:staging": "tsc -b && vite build --mode staging",
    "build:analyze": "vite build --mode analyze",
    "build:profile": "tsc -b && vite build --profile",
    "preview": "vite preview",
    "preview:dist": "serve -s dist -p 3000",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:ci": "eslint . --ext .ts,.tsx,.js,.jsx --format @eslint/formatter-json --output-file eslint-report.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:coverage:ci": "vitest run --coverage --reporter=json --outputFile=coverage/coverage.json",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky install",
    "postinstall": "husky install",
    "clean": "rimraf dist coverage .turbo node_modules/.vite",
    "clean:deps": "rimraf node_modules pnpm-lock.yaml && pnpm install",
    "generate:component": "plop component",
    "generate:page": "plop page",
    "generate:hook": "plop hook",
    "deps:check": "ncu --interactive",
    "deps:update": "ncu -u && pnpm install",
    "security:audit": "pnpm audit",
    "security:fix": "pnpm audit --fix",
    "size:analyze": "bundlemon --config bundlemon.config.json",
    "lighthouse": "lhci autorun"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/react": "^9.22.0",
    "@tailwindcss/vite": "^4.1.7",
    "@tanstack/react-query": "^5.75.7",
    "@tanstack/react-query-devtools": "^5.75.7",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.12.1",
    "i18next": "^25.1.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "lucide-react": "^0.511.0",
    "nanoid": "^5.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.56.4",
    "react-i18next": "^15.5.1",
    "react-router-dom": "^7.6.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "type-fest": "^4.41.0",
    "web-vitals": "^5.0.1",
    "zod": "^3.25.23",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.40.0",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/addon-interactions": "^7.6.0",
    "@storybook/addon-links": "^7.6.0",
    "@storybook/blocks": "^7.6.0",
    "@storybook/react": "^7.6.0",
    "@storybook/react-vite": "^7.6.0",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "bundlemon": "^2.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.25.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.6.15",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lighthouse": "^11.0.0",
    "lint-staged": "^16.0.0",
    "msw": "^2.8.4",
    "npm-check-updates": "^16.14.0",
    "plop": "^4.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "serve": "^14.2.0",
    "storybook": "^7.6.0",
    "tw-animate-css": "^1.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
